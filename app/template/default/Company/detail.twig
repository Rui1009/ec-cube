{% extends 'default_frame.twig' %}

{% set body_class = 'company_detail_page' %}

{% block main %}
{% form_theme form 'Form/form_div_layout.twig' %}
    <div class="ec-layoutRole__header">
        <div class="ec-headerNaviRole">
            <div class="ec-headerNaviRole__left">
                <h3 class="ec-headerNaviRole__logo">
                    <a href="{{ url('homepage') }}">
                        AMEX Shopping
                    </a>
                </h3>
                <div class="ec-headerNaviRole__search">
                    {{ render(path('block_search_product')) }}
                </div>
                <div class="ec-headerRole__navSP">
                    {{ include('Block/nav_sp.twig') }}
                </div>
            </div>
            <div class="ec-headerNaviRole__right">
                <div class="ec-headerNaviRole__nav">
                    {{ include('Block/login.twig') }}
                </div>
            </div>
        </div>
    </div>
    {{ include("Block/subHeader.twig") }}
    <div class="ec-shopRole">
        <div class="ec-shopRole__title">
            <div class="ec-shopRole__contentColumn">
                <div class="ec-shopRole__img">
                    <img src={{ asset('assets/img/top/img_sample_shop01.jpg') }} />
                </div>
                <h3>
                    {{ Company.name }}
                </h3>
            </div>
            <div class="ec-inlineBtn--cancel">
                {{ 'front.shop.add_favorite'|trans }}
            </div>
        </div>
        <h3 class="ec-shopRole__contentTitle">
            {{ 'front.shop.info'|trans }}
        </h3>
        <div>
            {{ Company.description }}
        </div>
        <h3 class="ec-shopRole__contentTitle">
            {{ 'front.shop.all.products'|trans({'%name%': Company.name}) }}
        </h3>
        <div class="ec-shelfRole">
            <div class="ec-shelfRole">
                <ul class="ec-shelfGrid">
                    {% for Product in Products %}
                        <li class="ec-shelfGrid__item">
                            <a href="{{ url('product_detail', {'id': Product.id}) }}">
                                <p class="ec-shelfGrid__item-image">
                                    <img src="{{ asset(Product.main_list_image|no_image_product, 'save_image') }}">
                                </p>
                                <p>{{ Product.name }}</p>
                                {% if Product.description_list %}
                                    <p>{{ Product.description_list|raw|nl2br }}</p>
                                {% endif %}
                                <p class="price02-default">
                                    {% if Product.hasProductClass %}
                                        {% if Product.getPrice02Min == Product.getPrice02Max %}
                                            {{ Product.getPrice02IncTaxMin|price }}
                                        {% else %}
                                            {{ Product.getPrice02IncTaxMin|price }} ï½ž {{ Product.getPrice02IncTaxMax|price }}
                                        {% endif %}
                                    {% else %}
                                        {{ Product.getPrice02IncTaxMin|price }}
                                    {% endif %}
                                </p>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
